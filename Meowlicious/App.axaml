<Application
    x:Class="Meowlicious.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Meowlicious"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Styles/Themes/DarkTheme.axaml" />
                <ResourceInclude Source="Styles/Themes/LightTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <FontFamily x:Key="InterFont">avares://Meowlicious/Assets/Fonts#Inter 18pt</FontFamily>

    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <materialIcons:MaterialIconStyles />
        <StyleInclude Source="/Styles/AppStyles.axaml" />
    </Application.Styles>


</Application>